{
	"$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
	"version": 8,
	"include": [
		"commonPresets.json"
	],
	"configurePresets": [
		{
			"name": "macos",
			"displayName": "macOS",
			"inherits": [
				"base"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "macos_universal",
			"displayName": "macOS (Universal Binary)",
			"inherits": [
				"macos"
			],
			"cacheVariables": {
				"CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
				"VCPKG_TARGET_TRIPLET": "universal-osx"
			}
		}
	],
	"buildPresets": [
		{
			"name": "macos",
			"displayName": "macOS",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			},
      "configurePreset": "macos"
		},
		{
			"name": "macos_universal",
			"displayName": "macOS (Universal Binary)",
			"inherits": [
				"macos"
			],
			"configurePreset": "macos_universal"
		}
	],
	"testPresets": [
	  {
		  "name": "macos",
			"displayName": "macOS",
			"inherits": [
			  "base"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			},
			"configurePreset": "macos"
		},
	  {
		  "name": "macos_universal",
			"displayName": "macOS (Universal Binary)",
			"inherits": [
			  "base"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			},
			"configurePreset": "macos_universal"
		}
	]
}
