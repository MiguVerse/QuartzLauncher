{
	"$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
	"version": 8,
	"include": [
		"commonPresets.json"
	],
	"configurePresets": [
		{
			"name": "windows_msvc",
			"displayName": "Windows (MSVC)",
			"inherits": [
				"base"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		}
	],
	"buildPresets": [
		{
			"name": "windows_msvc",
			"displayName": "Windows (MSVC)",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"configurePreset": "windows_msvc"
		}
	],
	"testPresets": [
	  {
		  "name": "windows_msvc",
			"displayName": "Windows (MSVC)",
			"inherits": [
			  "base"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"configurePreset": "windows_msvc"
		}
	]
}
